<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="profile.css">
  <title>Name - username</title>
  <link rel="stylesheet" href="../Nav/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body id="bootstrap-overrides" onload="myFunction()">
  <script src="../Login/check.js"></script>
  <script type="module" src="../Profile/auth.js"></script>
  <!--Navigation bar-->
  <%- include('../views/nav.ejs') %>
  <!--end of Navigation bar-->

  <div class="row">
    <span class="col-sm-12 col-md-4" id="sb">
      <div class="pfp-username">
        <div class="profile-picture">
          <div id="pfp-text">
          </div>
        </div>
        <h2 id="uheading"></h2>
      </div>
      <div class="settings">
        <form>
          <h4>Account</h4>
          <h6>Username</h6>
          <ul class="list-inline m-0">
            <li class="list-inline-item"><input type="text" class="form-control" id="userName" readonly></li>
            <li class="list-inline-item"><button class="btn btn-success btn-sm rounded-0" type="button"
                data-bs-toggle="modal" data-bs-target="#editUsernameModal" data-bs-placement="center" title="Edit"><i
                  class="fa fa-edit"></i></button></li>
          </ul>

          <h6>Email</h6>
          <ul class="list-inline m-0">
            <li class="list-inline-item"><input type="text" class="form-control" id="Email" readonly></li>
          </ul>
          <h6>Password</h6>
          <ul class="list-inline m-0">
            <li class="list-inline-item"><input type="password" class="form-control" id="password"
                placeholder="********" readonly></li>
            <li class="list-inline-item"><button class="btn btn-success btn-sm rounded-0" type="button"
                data-bs-toggle="modal" data-bs-target="#editPasswordModal" data-bs-placement="top" title="Edit"><i
                  class="fa fa-edit"></i></button></li>
          </ul>
        </form>
        <button id="delete-acc" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Delete Account</button>
      </div>
    </span>
    <span class="col-sm-12 col-md-8" id="bb">
      <div id="badges">
        <strong style="font-weight:600">Badges<strong>
            <div class="card-body" id="badges-body">
              <div id="hexagon">
                <div class="badge-title">
                  <span class="badge-title">C++<span>
                </div>
                <div class="stars">
                  <svg class="svg-star" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                    <path
                      d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z" />
                  </svg>
                  <svg class="svg-star" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                    <path
                      d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z" />
                  </svg>
                  <svg class="svg-star" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                    <path
                      d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z" />
                  </svg>
                </div>
              </div>
            </div>
      </div>
      <div id="submissions">
        <strong style="font-weight:600">Submissions<strong>
            <div class="card-body" id="submissions-card-body">
              <% for(let i = 0; i<info[0].submissions.length; i++){ %>
              <a href=""><%= info[0].submissions[i].problemName %></a> <i> <%= info[0].submissions[i].verdict %></i> <br>
              <% } %>
            </div>
      </div>
      <button id="load-more">Load more...</button>
    </span>
  </div>
  <div class="modal fade" id="editUsernameModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editUsernameModal">Edit username</h5>
          <button type="button" class="close btn btn-danger" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <label for="username">Username</label>
            <input type="text" class="form-control" id="new-username" placeholder="Enter new username">
            <label for="password">Password</label>
            <input type="password" id="edit-username-pwd" class="form-control" placeholder="Enter password" required>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="edit-username-btn">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="editPasswordModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Change password</h5>
          <button type="button" class="close btn btn-danger" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <label for="password">Old password</label>
            <input type="password" id="old-pwd" class="form-control"placeholder="Enter old password" required>
            <label for="password">New password</label>
            <input type="password" id="new-pwd-1" class="form-control" placeholder="Enter new password" required>
            <label for="password">Re-enter new password</label>
            <input type="password" id="new-pwd-2" class="form-control" placeholder="Enter new password" required>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="change-pwd-btn" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="deleteAccountModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" >Delete Account</h5>
          <button type="button" class="close btn btn-danger" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <label for="password">Enter password to confirm</label>
            <input type="password" id="delete-acc-pwd" class="form-control" placeholder="Enter password" required>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" id="delete-user-btn" class="btn btn-danger">Confirm</button>
        </div>
      </div>
    </div>
  </div>

  <script src="../Profile/profile.js"></script>
  <script src="../Nav/script.js"></script>

</body>

</html>