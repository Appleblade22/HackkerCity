<!DOCTYPE html>
<html lang="en">

<head>
  <title>Responsive Table</title>
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="../Nav/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="../editor/lib/CSS/Editor-style.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
  <!-- Navigation Bar -->
  <script src="../Login/check.js">
  </script>
  <%- include('../views/nav.ejs') %>

  <!-- Navigation Bar ends here -->

  <div class="submission-container">
    <h1 class="heading">Your Submissions</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Problem Name</th>
          <th>Score</th>
          <th>Language</th>
          <th>Verdict</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i<info[0].submissions.length; i++){ %>
          <tr>
            <td data-label="Problem Name"><%=info[0].submissions[i].problemName%></td>
            <td data-label="Score"><%=info[0].submissions[i].score%></td>
            <td data-label="Language"><%=info[0].submissions[i].language%></td>
            <td data-label="Verdict"><%=info[0].submissions[i].verdict%></td>
            <td data-label="Result">
              <a href="#" class="result" data-bs-toggle="modal" data-bs-target="#viewSubModal" data-bs-placement="center"
                title="View Result">View Result</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="modal fade" id="viewSubModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">View submission</h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="editor" id="editor__main">
            <div class="editor__wrapper" id="editor__wrapper">
              <div class="editor__body">
                <div id="editorCode" class="editor__code"></div>
              </div>
            </div>
          </div>
        </div>
        <script src="../editor/lib/JS/ace-editor/src-min/ace.js"></script>
        <script src="../editor/lib/JS/ace-editor/src-min/mode-javascript.js"></script>
        <script src="../editor/lib/JS/ace-editor/src-min/ext-language_tools.js"></script>

        <!-- Custom -->
      </div>
    </div>
  </div>
  </div>
  <script src="../Nav/script.js"></script>
  <script src="script.js"></script>
</body>

</html>