<!DOCTYPE html>
<html lang="en">

<head>
  <title>Submissions</title>
  <link rel="stylesheet" href="../Nav/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
  <!-- Navigation Bar -->
  <script src="../Login/check.js">
  </script>
  <%- include('../views/nav.ejs') %>


    <div class="submission-container">
      <h1 class="heading">Your Submissions</h1>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Problem Name</th>
            <th scope="col">Score</th>
            <th scope="col">Language</th>
            <th scope="col">Verdict</th>
            <th scope="col">Result</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=info[0].submissions.length - 1; i>=0; i--){ %>
            <tr>
              <td data-label="Problem Name">
                <%=info[0].submissions[i].problemName%>
              </td>
              <td data-label="Score">
                <%=info[0].submissions[i].score%>
              </td>
              <td data-label="Language">
                <%=info[0].submissions[i].language%>
              </td>
              <td data-label="Verdict">
                <%=info[0].submissions[i].verdict%>
              </td>
              <td data-label="Result">
                <a href="#" class="result" data-bs-toggle="modal" data-bs-target="#viewSubModal<%=i%>"
                  data-bs-placement="center" title="View Result">View Result</a>
                <div class="modal fade" id="viewSubModal<%=i%>">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">View submission</h5>
                        <button type="btn btn-danger button" class="close" data-bs-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <textarea class="form-control" id="viewSubmission" rows="10"
                          style="text-align : left !important" readonly><%=info[0].submissions[i].code%></textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

    </div>
    <script src="../Nav/script.js"></script>
</body>

</html>