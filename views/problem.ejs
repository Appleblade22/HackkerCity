<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="../editor/lib/CSS/Editor-style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../Problem/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>Problem</title>
  </head>

  <body>
    <script src="../Login/check.js"></script>
    <!-- nav bar  -->
    <%- include('../views/nav.ejs') %>
    <!-- Nav Ends Here -->

    <div class="head">
      <div class="probheader">
        <header>
          <ol class="path">
            <a href="../Skills/skills.html">
              <li class="list skills">Skills</li>
            </a>
            <% if(info[0].LANGUAGE == "C++"){%>
            <a href="../Problemset/Cpp.html">
              <li class="list lang">
                <span class="arrow"><i class="fas fa-angle-right"></i></span><%=
                info[0].LANGUAGE %>
              </li>
            </a>
            <% } else if(info[0].LANGUAGE == "JAVA"){%>
            <a href="../Problemset/Java.html">
              <li class="list lang">
                <span class="arrow"><i class="fas fa-angle-right"></i></span><%=
                info[0].LANGUAGE %>
              </li>
            </a>
            <% }else if(info[0].LANGUAGE == "PYTHON"){%>
            <a href="../Problemset/Python.html">
              <li class="list lang">
                <span class="arrow"><i class="fas fa-angle-right"></i></span><%=
                info[0].LANGUAGE %>
              </li>
            </a>
            <% }else if(info[0].LANGUAGE == "C"){%>
            <a href="../Problemset/C.html">
              <li class="list lang">
                <span class="arrow"><i class="fas fa-angle-right"></i></span><%=
                info[0].LANGUAGE %>
              </li>
            </a>
            <% } %>
            <li class="list name">
              <span class="arrow"><i class="fas fa-angle-right"></i></span>
              <%= info[0].PROBLEM_NAME%>
            </li>
          </ol>
          <h1><%= info[0].PROBLEM_NAME%></h1>
        </header>
      </div>
    </div>
    <div class="main">
      <div class="question">
        <div class="givenprob"><%- info[0].PROBLEM_STATEMENT %></div>
        <div class="inputform">
          <h4>Input Format</h4>
          <div class="inputform-ques">
            <pre><%- info[0].INPUT_FORMAT %></pre>
          </div>
        </div>
        <div class="constraint">
          <h4>Constraints</h4>
          <div class="constraint-ques">
            <pre> <%- info[0].CONSTRAINTS %></pre>
          </div>
        </div>
        <div class="outputform">
          <h4>Output Format</h4>
          <div class="outputform-ques">
            <pre>
<%- info[0].OUTPUT_FORMAT %>
            </pre>
          </div>
        </div>
        <div class="subinput-1">
          <h4>Sample input 1</h4>
          <div class="subint-1">
            <pre><%- info[0].SAMPLE_INPUT%></pre>
          </div>
        </div>
        <div class="suboutput-1">
          <h4>Sample output 1</h4>
          <div class="subout-1">
            <pre><%- info[0].SAMPLE_OUTPUT%> </pre>
          </div>
        </div>
      </div>
    </div>
    <div class="editor">
      <div class="editor__wrapper">
        <div class="editor__body">
          <div id="editorCode" class="editor__code"></div>
        </div>
        <div class="editor__footer">
          <div class="editor__footer-left">
            <div class="btn btn-success editor__submit editor__button">
              Submit
            </div>
            <div class="btn btn-danger editor__reset editor__button">Reset</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Ace Libraries -->
    <script src="../editor/lib/JS/ace-editor/src-min/ace.js"></script>
    <script src="../editor/lib/JS/ace-editor/src-min/mode-javascript.js"></script>
    <script src="../editor/lib/JS/ace-editor/src-min/ext-language_tools.js"></script>

    <!-- Custom -->
    <script src="../editor/lib/JS/editor.js"></script>
    <script src="../editor/lib/JS/editor-console.js"></script>
    <script src="../Problemset/script.js"></script>
    <script src="../Nav/script.js"></script>
  </body>
</html>
